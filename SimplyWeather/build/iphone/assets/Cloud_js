var Cloud=require("ti.cloud");Cloud.debug=!0;var loginApp=function(e,n,r){Cloud.Users.login({login:"walton21",password:"12345"},function(i){i.success?Cloud.Objects.create({classname:"weather",fields:{city:n,temp:e,condition:r}},function(e){if(e.success){var n=e.weather[0];alert("Success:\nid: "+n.id+"\ncity: "+n.city+"\ntemp: "+n.temp+"\ncondition: "+n.condition+"\ncreated_at: "+n.created_at)}else alert("Error:\n"+(e.error&&e.message||JSON.stringify(e)))}):alert("Error:\n"+(i.error&&i.message||JSON.stringify(i)))})};Ti.Network.online?loginApp():alert("no network available"),exports.loginApp=loginApp;